        const genres = ["Action", "Comedy", "Drama", "Romance", "Thriller", "Horror", "Sci-Fi", "Fantasy", "Biography", "Sport", "Family", "Music", "Adventure"];
        const languages = ["Hindi", "Telugu", "Tamil", "Malayalam", "Kannada", "Marathi", "Bengali", "Gujarati"];
        
        let currentAlgorithm = 'correlation';
        let selectedGenres = [];
        let currentRecommendations = [];

        // Algorithm information
        const algorithmInfo = {
            correlation: {
                title: "Correlation-Based Filtering",
                description: "Analyzes statistical relationships between user preferences and movie characteristics using Pearson correlation coefficients."
            },
            knn: {
                title: "K-Nearest Neighbors",
                description: "Identifies similar users based on rating patterns and recommends movies they enjoyed using collaborative filtering."
            },
            matrix: {
                title: "Matrix Factorization (SVD)",
                description: "Decomposes user-item matrices into latent factors to discover hidden preference patterns using gradient descent optimization."
            }
        };

        function initializeApp() {
            createPreferencesGrid();
            updateRecommendationsTitle();
        }

        function createPreferencesGrid() {
            const grid = document.getElementById('preferencesGrid');
            grid.innerHTML = genres.map(genre => `
                <div class="preference-chip" onclick="toggleGenre('${genre}')">
                    ${getGenreEmoji(genre)} ${genre}
                </div>
            `).join('');
        }

        function getGenreEmoji(genre) {
            const emojis = {
                "Action": "üí•", "Comedy": "üòÑ", "Drama": "üé≠", "Romance": "‚ù§Ô∏è",
                "Thriller": "üî™", "Horror": "üëª", "Sci-Fi": "üöÄ", "Fantasy": "üßô‚Äç‚ôÇÔ∏è",
                "Biography": "üìñ", "Sport": "‚öΩ", "Family": "üë®‚Äçüë©‚Äçüëß‚Äçüë¶", "Music": "üéµ", "Adventure": "üó∫Ô∏è"
            };
            return emojis[genre] || "üé¨";
        }

        function toggleGenre(genre) {
            const chip = event.target;
            
            if (selectedGenres.includes(genre)) {
                selectedGenres = selectedGenres.filter(g => g !== genre);
                chip.classList.remove('selected');
            } else {
                selectedGenres.push(genre);
                chip.classList.add('selected');
            }
        }

        function switchAlgorithm(algorithm) {
            currentAlgorithm = algorithm;
            
            // Update active algorithm card
            document.querySelectorAll('.algo-card').forEach(card => {
                card.classList.remove('active');
            });
            event.target.closest('.algo-card').classList.add('active');
            
            // Regenerate recommendations if genres are selected
            if (selectedGenres.length > 0) {
                generateRecommendations();
            }
        }

        function generateRecommendations() {
            if (selectedGenres.length === 0) {
                showNoGenresMessage();
                return;
            }

            showLoadingState();
            
            // Simulate processing time
            setTimeout(() => {
                let recommendations;
                
                switch(currentAlgorithm) {
                    case 'correlation':
                        recommendations = getCorrelationRecommendations();
                        break;
                    case 'knn':
                        recommendations = getKNNRecommendations();
                        break;
                    case 'matrix':
                        recommendations = getMatrixRecommendations();
                        break;
                }
                
                currentRecommendations = recommendations;
                displayRecommendations(recommendations);
                updateRecommendationsTitle();
            }, 2000);
        }

        function getCorrelationRecommendations() {
            const filtered = indianMovieDatabase.filter(movie => 
                movie.genres.some(genre => selectedGenres.includes(genre))
            );
            
            return filtered
                .sort((a, b) => b.rating - a.rating)
                .slice(0, 12)
                .map(movie => ({
                    ...movie,
                    confidence: Math.min(95, 75 + Math.random() * 20),
                    algorithm: 'Correlation Analysis'
                }));
        }

        function getKNNRecommendations() {
            const scoredMovies = indianMovieDatabase.map(movie => {
                const genreMatch = movie.genres.filter(genre => selectedGenres.includes(genre)).length;
                const score = (genreMatch / selectedGenres.length) * movie.rating + Math.random() * 0.8;
                return {...movie, score};
            });
            
            return scoredMovies
                .filter(movie => movie.genres.some(genre => selectedGenres.includes(genre)))
                .sort((a, b) => b.score - a.score)
                .slice(0, 12)
                .map(movie => ({
                    ...movie,
                    confidence: Math.min(95, 70 + Math.random() * 25),
                    algorithm: 'K-Nearest Neighbors'
                }));
        }

        function getMatrixRecommendations() {
            const latentFactors = indianMovieDatabase.map(movie => {
                const factorScore = movie.genres.reduce((score, genre) => {
                    return score + (selectedGenres.includes(genre) ? movie.rating * 0.12 : 0);
                }, 0) + Math.random() * 1.5;
                
                return {...movie, factorScore};
            });
            
            return latentFactors
                .filter(movie => movie.genres.some(genre => selectedGenres.includes(genre)))
                .sort((a, b) => b.factorScore - a.factorScore)
                .slice(0, 12)
                .map(movie => ({
                    ...movie,
                    confidence: Math.min(95, 80 + Math.random() * 15),
                    algorithm: 'Matrix Factorization'
                }));
        }

        function showLoadingState() {
            document.getElementById('recommendations').innerHTML = `
                <div class="loading" style="grid-column: 1 / -1;">
                    <div class="spinner"></div>
                    <h3>Analyzing your preferences...</h3>
                    <p>Using ${algorithmInfo[currentAlgorithm].title} to find perfect matches</p>
                </div>
            `;
        }

        function showNoGenresMessage() {
            document.getElementById('recommendations').innerHTML = `
                <div class="no-results">
                    <h3>üé≠ Select Your Favorite Genres</h3>
                    <p>Choose at least one genre from the preferences above to get personalized recommendations!</p>
                </div>
            `;
        }

        function displayRecommendations(recommendations) {
            const container = document.getElementById('recommendations');
            
            if (recommendations.length === 0) {
                container.innerHTML = `
                    <div class="no-results">
                        <h3>üòî No matches found</h3>
                        <p>Try selecting different genres for more recommendations</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = recommendations.map((movie, index) => `
                <div class="movie-card" onclick="showMovieDetails(${index})">
                    <div class="movie-poster">
                        ${getGenreEmoji(movie.genres[0])} ${movie.title}
                        <div style="position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.7); padding: 4px 8px; border-radius: 10px; font-size: 0.8rem;">
                            ${movie.language}
                        </div>
                    </div>
                    <div class="movie-info">
                        <div class="movie-title">${movie.title}</div>
                        <div class="movie-meta">
                            <span class="movie-year">${movie.year}</span>
                            <span class="movie-rating">‚≠ê ${movie.rating}</span>
                        </div>
                        <div class="movie-genres">
                            ${movie.genres.slice(0, 3).map(genre => `<span class="genre-tag">${genre}</span>`).join('')}
                        </div>
                        <div class="movie-confidence">
                            ${movie.confidence.toFixed(1)}% Match
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateRecommendationsTitle() {
            const title = document.getElementById('recommendationsTitle');
            if (selectedGenres.length > 0) {
                title.textContent = `${algorithmInfo[currentAlgorithm].title} Recommendations`;
            } else {
                title.textContent = "Your Personalized Recommendations";
            }
        }

        function showMovieDetails(index) {
            const movie = currentRecommendations[index];
            if (!movie) return;
            
            document.getElementById('modalTitle').textContent = movie.title;
            document.getElementById('modalBody').innerHTML = `
                <div class="modal-meta">
                    <div class="meta-item">
                        <h4>üé¨ Director</h4>
                        <p>${movie.director || 'N/A'}</p>
                    </div>
                    <div class="meta-item">
                        <h4>‚≠ê Rating</h4>
                        <p>${movie.rating}/10</p>
                    </div>
                    <div class="meta-item">
                        <h4>üìÖ Year</h4>
                        <p>${movie.year}</p>
                    </div>
                    <div class="meta-item">
                        <h4>üåê Language</h4>
                        <p>${movie.language}</p>
                    </div>
                </div>
                
                <div class="meta-item">
                    <h4>üé≠ Cast</h4>
                    <p>${movie.cast ? movie.cast.join(', ') : 'N/A'}</p>
                </div>
                
                <div class="meta-item">
                    <h4>üìñ Description</h4>
                    <p>${movie.description}</p>
                </div>
                
                <div class="meta-item">
                    <h4>üè∑Ô∏è Genres</h4>
                    <p>${movie.genres.join(' ‚Ä¢ ')}</p>
                </div>
                
                <div class="meta-item">
                    <h4>ü§ñ AI Confidence</h4>
                    <p>${movie.confidence.toFixed(1)}% match using ${movie.algorithm}</p>
                </div>
            `;
            
            document.getElementById('movieModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('movieModal').style.display = 'none';
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', initializeApp);
        
        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('movieModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
    </script>
</body>
</html>
